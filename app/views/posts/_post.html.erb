<div id="post-<%= post.id %>" class="post posted-by-<%= post.user_id %> mt-2">
    <div class="d-flex d-align-items-end">
        <%= link_to gravatar_for(post.user), user_path(post.user), class: 'poster-name' %>
        <div class="pl-2">
            <%= link_to post_header(post), user_path(post.user), class: 'text-primary' %>
            <small class="post-date-time"><%= post.created_at.strftime("%c") %></small>
            <p><%= post.content %></p>
        </div>
    </div>
    <% if is_post_owner?(post) %>
        <%= link_to 'edit', edit_post_path(post), class: 'edit-post' %>
    <% end %>
</div>